{
  "name": "chatbot-service",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/L1US/chatbot/service",
  "projectType": "application",
  "targets": {
    "build": {
      "cache": true,
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "apps/L1US/chatbot/service"
      },
      "dependsOn": [
        {
          "target": "setup"
        }
      ],
      "configurations": {
        "development": {
          "outputPath": "apps/L1US/chatbot/service"
        },
        "production": {
          "outputPath": "apps/L1US/chatbot/service"
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "dependsOn": [
        {
          "target": "setup"
        },
        {
          "target": "put-toml-testing"
        }
      ],
      "configurations": {
        "development": {
          "buildTarget": "chatbot-service:build:local",
          "dev": true
        },
        "production": {
          "buildTarget": "chatbot-service:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "chatbot-service:build:production"
      }
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["graphql-codegen --config ./apps/L1US/chatbot/service/graphql-codegen.yml"]
      },
      "dependsOn": [
        {
          "target": "get-secrets:testing"
        }
      ]
    },
    "test": {
      "cache": true,
      "inputs": ["{projectRoot}/**/*"],
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/L1US/chatbot/service/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      },
      "dependsOn": [
        {
          "target": "setup"
        }
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/L1US/chatbot/service/**/*.{ts,tsx,js,jsx}"],
        "cache": true
      }
    },

    "get-secrets:dev": {
      "executor": "@pinecone-intern-monorepo/secrets:get",
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "groups": ["chatbot-backend"],
          "env": "dev"
        }
      }
    },
    "get-secrets:testing": {
      "executor": "@pinecone-intern-monorepo/secrets:get",
      "defaultConfiguration": "testing",
      "configurations": {
        "testing": {
          "groups": ["chatbot-backend"],
          "env": "test"
        }
      }
    },
    "get-secrets:prod": {
      "executor": "@pinecone-intern-monorepo/secrets:get",
      "defaultConfiguration": "prod",
      "configurations": {
        "prod": {
          "groups": ["chatbot-backend"],
          "env": "prod"
        }
      }
    },

    "drizzle:generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx drizzle-kit generate --config=apps/L1US/chatbot/service/drizzle.config.ts"]
      }
    },
    "drizzle:migrate": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:migrate-d1",
      "options": {
        "name": "sample-worker-test",
        "directory": "drizzle/"
      }
    },
    "put-toml-testing": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:create-toml",
      "options": {
        "env": "Testing"
      }
    },
    "put-toml-prod": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:create-toml",
      "options": {
        "env": "Production"
      }
    },
    "put-toml-dev": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:create-toml",
      "options": {
        "env": "Development"
      }
    },
    "preview": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:pages-deploy",
      "options": {
        "projectName": "chatbot-service-testing"
      },
      "dependsOn": [
        {
          "target": "setup"
        },
        {
          "target": "put-toml-testing"
        }
      ]
    },
    "deploy-testing": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:pages-deploy",
      "options": {
        "branch": "main",
        "projectName": "chatbot-service-testing"
      },
      "dependsOn": [
        {
          "target": "setup"
        },
        {
          "target": "put-toml-testing"
        }
      ]
    },
    "deploy-dev": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:pages-deploy",
      "options": {
        "branch": "main",
        "projectName": "chatbot-service-dev"
      },
      "dependsOn": [
        {
          "target": "setup"
        },
        {
          "target": "put-toml-dev"
        }
      ]
    },
    "deploy-prod": {
      "executor": "@pinecone-intern-monorepo/cloudflare-wrangler:pages-deploy",
      "options": {
        "branch": "main",
        "projectName": "chatbot-service-prod"
      },
      "dependsOn": [
        {
          "target": "setup"
        },
        {
          "target": "put-toml-prod"
        }
      ]
    }
  },
  "tags": ["type:app"]
}
