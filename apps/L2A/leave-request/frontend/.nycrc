{
  "extends": "@istanbuljs/nyc-config-typescript",
  "reporter": [
    "text",
    "lcov"
  ],
  "exclude": [
    "coverage",
    "libs/**",
    "src/components/**",
    "src/**/_components/**",
    "src/**/_features/**",
    "src/common/**",
    "node_modules"
  ],
  "include": [
    "src/app/**/*"
  ],
  "excludeAfterRemap": true,
  "all": true,
  "check-coverage": true,
  "extension": [
    ".js",
    ".cjs",
    ".mjs",
    ".ts",
    ".tsx",
    ".jsx"
  ],
  "report-dir": "./coverage",
  "cache": false
}
